<h1 class="text-center">Tasks <span><%= link_to 'New', new_task_path %></span></h1>

<div class="row">
  <section class="content columns small-6">
    <h2>Me</h2>
    <ul class="row">
      <% @tasks.each do |task| %>
        <% if task.user_id == current_user.id %>
        <li class="small-12 columns">
          <article class="documents row">
            <hgroup class="text-center small-12 columns">
              <h5><%= task.title %></h5>
              <h6><b>Author: </b><%= task.user.fullname %></h6>
            </hgroup>
            <div class="small-offset-4 small-4 columns"><%= image_tag task.user.profile.url(:thumb) %></div>
            <div class="small-12 columns">
              <p><b>Start: </b><%= task.start_date %></p>
              <p><b>Finish: </b><%= task.finish_date %></p>
              <p><b>Duration: </b><%= task.duration %>
                <% if task.duration > 1 %> hours <% else %> hour <% end %>
              </p>
              <p><b>Responsible: </b><%= find_responsable(task.responsible_id) %></p>
            </div>
            <ul class="small-12 columns">
              <li><p class="left"><%= link_to 'Show', task %></p></li>
              <li><p class="left"><%= link_to 'Edit', edit_task_path(task) %></p></li>
              <li class="right">
                <p><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </li>
            </ul>
          </article>
        </li>
        <% end %>
      <% end %>
    </ul>
    <br>
  </section>

  <section class="content columns small-6">
    <h2>Responsible</h2>
    <ul class="row">
      <% @tasks.each do |task| %>
        <% if task.responsible_id == current_user.id %>
        <li class="small-12 columns">
          <article class="documents row">
            <hgroup class="text-center small-12 columns">
              <h5><%= task.title %></h5>
              <h6><b>Author: </b><%= task.user.fullname %></h6>
            </hgroup>
            <div class="small-offset-4 small-4 columns"><%= image_tag task.user.profile.url(:thumb) %></div>
            <div class="small-12 columns">
              <p><b>Start: </b><%= task.start_date %></p>
              <p><b>Finish: </b><%= task.finish_date %></p>
              <p><b>Duration: </b><%= task.duration %>
                <% if task.duration > 1 %> hours <% else %> hour <% end %>
              </p>
              <p><b>Responsible: </b><%= find_responsable(task.responsible_id) %></p>
            </div>
            <ul class="small-12 columns">
              <li><p class="left"><%= link_to 'Show', task %></p></li>
              <li><p class="left"><%= link_to 'Edit', edit_task_path(task) %></p></li>
              <li class="right">
                <p><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </li>
            </ul>
          </article>
        </li>
        <% end %>
      <% end %>
    </ul>
    <br>
  </section>
</div>