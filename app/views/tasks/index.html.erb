<h1>Listing tasks</h1>

<%= link_to 'New Task', new_task_path, class:'button' %>
<div class="row">

<div class="columns large-12">
  <h2>In progress</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Start date</th>
        <th>Finish date</th>
        <th>User</th>
        <th>Finished</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <% if task.finished == false %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.duration %></td>
          <td><%= task.start_date %></td>
          <td><%= task.finish_date %></td>
          <td><%= task.user_id %></td>
          <td><%= task.finished %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="columns large-12">
  <h2>Finished</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Start date</th>
        <th>Finish date</th>
        <th>User</th>
        <th>Finished</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <% if task.finished == true %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.duration %></td>
          <td><%= task.start_date %></td>
          <td><%= task.finish_date %></td>
          <td><%= task.user_id %></td>
          <td><%= task.finished %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

</div>


